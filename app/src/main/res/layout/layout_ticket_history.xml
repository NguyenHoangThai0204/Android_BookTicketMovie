<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/textView5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vé vào rạp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rạp phim: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textRapMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tên phim: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textMovieName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Giờ chiếu: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textMovieTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ngày chiếu: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textMovieDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số ghế: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textSeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thành tiền: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/textMoney"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#F44336"
            android:textSize="30sp"/>
    </TableRow>
    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chân thành cảm ơn khách hàng đã luôn tin tưởng và chọn hệ thống của chúng tôi!"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="171dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:src="@drawable/qr"></ImageView>
    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------//-------------" />
</LinearLayout>