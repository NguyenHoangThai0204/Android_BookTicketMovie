<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="Member Login"
        android:textAlignment="center"
        android:textColor="#B890EF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Label"
        android:layout_centerInParent="true"
        android:background="@drawable/table_row_background"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:drawableTint="#9667DA"

        android:hint="Số điện thoại"
        android:inputType="textNoSuggestions"
        android:padding="13dp"
        android:textColor="#AD85E8"
        android:textColorHint="#C5A2F8"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_centerInParent="true"
        android:layout_marginTop="15sp"
        android:background="@drawable/table_row_background"
        android:drawableLeft="@drawable/padlock"
        android:drawablePadding="10dp"
        android:drawableTint="#9667DA"
        android:drawableTintMode="src_in"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="13dp"
        android:textColor="#AD85E8"
        android:textColorHint="#C5A2F8"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbShowMK"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbShowMK"
        android:layout_centerVertical="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="11dp"
        android:text="Forget password"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgetPass"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="125dp"
        android:backgroundTint="#69C3EC"
        android:text="Login"
        android:textSize="27sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/socialIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconGG"
            android:layout_width="41dp"
            android:layout_height="65dp"
            android:src="@drawable/google"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="35dp"/>
        <ImageView
            android:id="@+id/iconFacbook"
            android:layout_width="41dp"
            android:layout_height="65dp"
            android:src="@drawable/facebook"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="10dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/socialIcon"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:text="or sign in with: "
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/cbShowMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:text="Hiện mật khẩu"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>